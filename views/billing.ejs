        const oldsubs = JSON.parse('<%- JSON.stringify(subscriptions) %>');
        const sentprices = JSON.parse('<%- JSON.stringify(prices) %>');
        const payments = parseInt('<%- payment %>');
        const clientSecret = '<%- clientSecret %>';
